{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "TemanKasir by mhai.my.id",
  "version": "1.2.0",
  "identifier": "com.mhaimyid.temankasir",
  "mainBinaryName": "temankasir",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TemanKasir by mhai.my.id",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "mhai.my.id",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "certificateThumbprint": null
  }
}
}
